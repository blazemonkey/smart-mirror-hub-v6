@inherits BaseComponent
@page "/mirror/{userId:int}/{mirrorName}"

@if (IsLoading == true) 
{
 <div class="d-flex full-page">
     <div class="m-auto">
         <img class="icon" src=@("images/loading.svg") />
     </div>
 </div>
}
else {
    if (string.IsNullOrEmpty(ErrorMessage) == false) {
        <div class="d-flex full-page">
            <div class="m-auto">
                <div class="d-flex flex-column m-auto align-items-center">
                    <img class="rounded" src="https://media.istockphoto.com/photos/beautiful-young-yellow-maine-coon-cat-working-on-laptop-picture-id916511842?k=6&m=916511842&s=612x612&w=0&h=zHqDWqNP9u813aOYSsGQEUzMvUrDomMj_rYDzeBr3KY=" />
                    <p class="text-center m-2 h1">@ErrorMessage</p>
                </div>
            </div>
        </div>
    }
    else  {
        @ComponentsRender
    }
}