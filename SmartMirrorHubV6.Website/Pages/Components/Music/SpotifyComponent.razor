 @using SmartMirrorHubV6.Shared.Components.Data.Music;
@inherits MirrorGenericBaseComponent<SpotifyResponse>

@if (Response != null && IsShowing)
{
<div class="d-flex align-items-center justify-content-between">
    <div class="d-flex">
        @foreach (var a in Response.Artists)
        {
            <div class="d-flex flex-column">
                <img class="spotify-artist-cover rounded-3 m-2 d-block" src="@a.ArtistImageUrl" />
                <div class="text-center">@a.Name</div>
            </div>
        }
    </div>
    <div class="d-flex flex-column">
        <div class="h3 mx-2 fw-bold">@Response.SongName</div>
        <div class="mx-2">@Response.AlbumName</div>
    </div>
    <img class="spotify-album-cover rounded-3 m-2 d-block" src="@Response.AlbumCoverUrl" />
</div>
}
